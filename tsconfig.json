{
	"compilerOptions": {
		"target": "es5",// es2015?
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"rootDir": "src",
		"sourceMap": true,
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		// "noImplicitReturns": true,
		// "noImplicitThis": true,
		// "noImplicitAny": true,
		// "strictNullChecks": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx"
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"build"
	]
}
